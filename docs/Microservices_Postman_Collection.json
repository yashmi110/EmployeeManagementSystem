		{
			"name": "Integration Tests",
			"item": [
				{
					"name": "Complete Workflow Test",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// This test demonstrates a complete workflow across all services",
									"",
									"// 1. Create a department",
									"pm.test(\"Create Department\", function () {",
									"    pm.response.to.have.status(201);",
									"    const response = pm.response.json();",
									"    pm.expect(response.name).to.eql(\"Test Department\");",
									"    pm.environment.set(\"departmentId\", response.id);",
									"});",
									"",
									"// 2. Create an employee",
									"pm.test(\"Create Employee\", function () {",
									"    pm.response.to.have.status(201);",
									"    const response = pm.response.json();",
									"    pm.expect(response.name).to.eql(\"Test Employee\");",
									"    pm.environment.set(\"employeeId\", response.id);",
									"});",
									"",
									"// 3. Create a project",
									"pm.test(\"Create Project\", function () {",
									"    pm.response.to.have.status(201);",
									"    const response = pm.response.json();",
									"    pm.expect(response.name).to.eql(\"Test Project\");",
									"    pm.environment.set(\"projectId\", response.id);",
									"});",
									"",
									"// 4. Assign employee to project",
									"pm.test(\"Assign Employee to Project\", function () {",
									"    pm.response.to.have.status(200);",
									"    pm.expect(pm.response.text()).to.include(\"Employee assigned successfully\");",
									"});"
								]
							}
						}
					],
					"request": {
						"method": "POST",
